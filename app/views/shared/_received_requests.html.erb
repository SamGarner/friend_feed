Requests Received:<br>
  <% if requests_received.empty? %>
    No pending requests.
    <br>
  <% else %>
    <% requests_received.each do |request| %>
      <%= request.sender.name %>
      <%#= form_with model: request, method: :patch do |f| %>
      <%= simple_form_for request, method: :patch do |f| %>
        <%= f.submit "Accept", class: "button is-primary is-light is-outlined is-small" %>
        <%= f.submit "Reject", class: "button is-danger is-light is-outlined is-small"  %> 
      <% end %>    
      <br>
    <% end %>
  <% end %>