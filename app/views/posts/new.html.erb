<div class="column is-half rows:10">
<%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :content, label: "What's on your mind?", input_html: { class: "textarea is-primary" }, wrapper: false %>
    </div>
  </div>
<%= f.button :submit, "Post", class: "button is-small is-primary" %>
<% end %>
